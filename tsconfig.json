{
    "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true,
      "target": "ES2022",
      "moduleResolution": "Node",
      "sourceMap": true,
      "sourceRoot": "src",
      "outDir": "dist",
      "baseUrl": "src",
      "declaration": true,

      "strict": false,
      "noImplicitUseStrict": true,
      "experimentalDecorators": true,

      "emitDecoratorMetadata": false
    },
    "lib": ["ES2022"],
    "include": [
      "src/**/*"
    ]
  }